@using DesignPatter.Mediator.MediatorPattern.Results;
@model List<GetAllProductQueryResult>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<div class="container">
    <br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Ürün Adı</th>
            <th>Fiyatı</th>
            <th>Stok</th>
            <th>Stok Türü</th>
            <th>Kategori</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detay</th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.ProductId</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>@item.StockType</td>
                <td>@item.CategoryId</td>
                <td><a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-outline-secondary">Güncelle</a></td>
                <td><a href="/Product/GetByIdProduct/@item.ProductId" class="btn btn-outline-info">Detay</a></td>
            </tr>
        }
    </table>
    <a href="/Product/AddProduct" class="btn btn-success">Ekle</a>
</div>
