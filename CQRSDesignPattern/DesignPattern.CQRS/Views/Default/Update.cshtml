@model GetProductUpdateQueryResult
@{
    Layout = null;
}


<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<div class="container">

    <form method="post">

        <label>Id</label>
        <input type="text" class="form-control" asp-for="Id" />
        <br />

        <label>Ürün Adı</label>
        <input type="text" class="form-control" asp-for="Name" />
        <br />

        <label>Ürün Stok Sayısı</label>
        <input type="text" class="form-control" asp-for="Stock" />
        <br />

        <label>Ürün Fiyatı</label>
        <input type="text" class="form-control" asp-for="Price" />
        <br />

        <label>Açıklama</label>
        <input type="text" class="form-control" asp-for="Description" />
        <br />

        <button class="btn btn-success">Güncelle</button>
    </form>
</div>

